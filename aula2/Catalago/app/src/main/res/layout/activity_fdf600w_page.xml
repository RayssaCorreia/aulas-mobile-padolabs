<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6E6E6"
    tools:context=".Fde_600w_Page">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:src="@drawable/fde600w"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:text="FDE-600W"
        android:textColor="#444444"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="300dp"
        android:layout_height="28dp"
        android:fontFamily="@font/roboto"
        android:paddingLeft="12dp"
        android:text="FECHADURA DIGITAL DE EMBUTIR"
        android:textColor="#444444"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/botao"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:backgroundTint="#444444"
        android:fontFamily="@font/roboto"
        android:text="Comprar agora"
        android:textAllCaps="false"
        app:cornerRadius="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/PrincipalCmp"
        android:layout_width="408dp"
        android:layout_height="258dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3">

        <LinearLayout
            android:id="@+id/PrimirosCmp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/Agua"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/imageAgua"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/agua" />

                <TextView
                    android:id="@+id/textAgua"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/roboto"
                    android:gravity="center|center_horizontal|fill_horizontal"
                    android:paddingLeft="5dp"
                    android:text="Resistente à água"
                    android:textColor="#444444"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/Acesso"
                android:layout_width="match_parent"
                android:layout_height="83dp"
                android:orientation="horizontal"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/imageAcesso"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/acesso" />

                <TextView
                    android:id="@+id/textAcesso"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/roboto"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:text="Acesso remoto via wi-fi"
                    android:textColor="#444444"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/Teclado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/imageTeclado"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/teclado" />

                <TextView
                    android:id="@+id/textTeclado"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/roboto"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:text="Teclado numérico"
                    android:textColor="#444444"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/SegundoCmp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/Alexa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/imageAlexa"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/alexa" />

                <TextView
                    android:id="@+id/textAlexa"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/roboto"
                    android:gravity="center_vertical"
                    android:text="Compatível com Alexa"
                    android:textColor="#444444"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/Biometrico"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:orientation="horizontal"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/imageBiometrico"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/biometrico" />

                <TextView
                    android:id="@+id/textBiometrico"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/roboto"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:text="Leitor Biométrico"
                    android:textColor="#444444"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/Cartao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/imageCartao"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/cartao" />

                <TextView
                    android:id="@+id/textCartao"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/roboto"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:text="Acesso por cartão"
                    android:textColor="#444444"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>